<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NumberDemoUnit_Validation</fullName>
    <active>true</active>
    <description>Number of Demo Units can only be a positive numeric value.</description>
    <errorConditionFormula>IF(AND(ISPICKVAL(Certification_Criteria_Name__c , &quot;Demo Unit&quot;),OR(Number_of_Demo_Units__c &lt;= 0,ISBLANK(Number_of_Demo_Units__c))), true,false)</errorConditionFormula>
    <errorDisplayField>Number_of_Demo_Units__c</errorDisplayField>
    <errorMessage>Please enter a valid postive Number.</errorMessage>
</ValidationRule>
