<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_DellFormat_Email_Address</fullName>
    <active>true</active>
    <description>Validate the email format to comply with Dell Standard email format</description>
    <errorConditionFormula>(REGEX( Email__c , &quot; ^([a-zA-Z0-9_\\-\\.\\&apos;]+)@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.)|(([a-zA-Z0-9\\-]+\\.)+))([a-zA-Z]{2,20}|[0-9]{1,3})(\\]?)$&quot;))</errorConditionFormula>
    <errorDisplayField>Email__c</errorDisplayField>
    <errorMessage>Invalid Email</errorMessage>
</ValidationRule>
