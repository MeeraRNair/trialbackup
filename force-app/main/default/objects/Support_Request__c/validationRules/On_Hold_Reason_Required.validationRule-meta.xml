<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>On_Hold_Reason_Required</fullName>
    <active>true</active>
    <description>On Hold Reason is Required if On Hold Start Date is Not Blank</description>
    <errorConditionFormula>AND( 
OR(RecordType.DeveloperName=&apos;Request_OEM_Customized_Solution_Support&apos;, RecordType.DeveloperName=&apos;Request_OEM_Tech_Partner_Support&apos;),
ISPICKVAL(On_Hold_Reason__c, &quot;&quot;), 
NOT(ISBLANK( On_Hold_Start_Date__c )))</errorConditionFormula>
    <errorDisplayField>On_Hold_Reason__c</errorDisplayField>
    <errorMessage>You must enter a value</errorMessage>
</ValidationRule>
