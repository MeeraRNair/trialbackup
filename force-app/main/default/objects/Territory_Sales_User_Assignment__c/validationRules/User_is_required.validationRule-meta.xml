<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>User_is_required</fullName>
    <active>true</active>
    <description>This rule is to make the User field required when created through API</description>
    <errorConditionFormula>ISBLANK(User__c )</errorConditionFormula>
    <errorDisplayField>User__c</errorDisplayField>
    <errorMessage>User is required!!</errorMessage>
</ValidationRule>
